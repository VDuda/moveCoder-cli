{
  "compilerOptions": {
    "lib": ["es2023", "dom"],
    "module": "esnext",
    "target": "esnext",
    "moduleResolution": "bundler",
    "moduleDetection": "force",
    "allowImportingTsExtensions": true,
    "noEmit": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "jsx": "react-jsx",
    "jsxImportSource": "@opentui/react",
    "outDir": "./dist",
    "paths": {
      "@opentui/*": ["./node_modules/@opentui/*"]
    }
  },
  "include": ["src/**/*"]
}